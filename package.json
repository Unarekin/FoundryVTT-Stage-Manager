{
  "name": "foundryvtt-stage-manager",
  "version": "0.0.1",
  "description": "A module for Foundry VTT meant to replace Theatre Inserts and provide accessible methods to display and manipulate visual novel-like character art.",
  "main": "dist/module.js",
  "scripts": {
    "test": "npx start-server-and-test start-server http://localhost:30000 cy:run",
    "cy:run": "npx cypress run --browser chrome",
    "cy:open": "npx cypress open",
    "test:e2e": "npx start-server-and-test start-server http://localhost:30000 test:e2e:open",
    "test:component": "npx start-server-and-test start-server http://localhost:30000 test:component:open",
    "test:e2e:open": "npx cypress open --e2e --browser chrome",
    "test:component:open": "npx cypress run --component --browser chrome",
    "build": "./build.mjs",
    "build:prod": "NODE_ENV=production ./build.mjs",
    "watch": "npx onchange 'src/**/*' -- yarn build",
    "start-server": "node ./run-server.mjs"
  },
  "author": "Unarekin",
  "license": "MIT",
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.6",
    "@angular/cli": "^18.2.6",
    "@angular/common": "^18.2.6",
    "@angular/compiler": "^18.2.6",
    "@angular/compiler-cli": "^18.2.6",
    "@angular/core": "^18.2.6",
    "@angular/platform-browser-dynamic": "^18.2.6",
    "@eslint/js": "^9.11.0",
    "@types/Foundry-VTT": "https://github.com/League-of-Foundry-Developers/foundry-vtt-types.git",
    "@types/cypress": "^1.1.3",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.4",
    "cypress-mochawesome-reporter": "^3.8.2",
    "deepmerge-ts": "^7.1.0",
    "esbuild": "^0.23.1",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-node-externals": "^1.14.0",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-json-merge": "^0.1.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.11.0",
    "glob": "^11.0.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "yocto-spinner": "^0.1.0"
  }
}
