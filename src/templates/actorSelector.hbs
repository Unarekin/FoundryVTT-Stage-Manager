<div class="form-group">
  <label for="{{id}}">{{localize "DOCUMENT.Actor"}}</label>
  <div class="flexrow">
    <select name="{{id}}" id="{{id}}">
      <option value=""></option>
      {{#group actors by="pack"}}
        {{#if value}}<optgroup label="{{localize value}}">{{/if}}
        {{#each items}}
          <option value="{{uuid}}"{{#if selected}} selected{{/if}}>{{name}}</option>
        {{/each}}
        {{#if value}}</optgroup>{{/if}}
      {{/group}}
    </select>
    <button class="flex0" type="button" data-action="selectActor" data-target="#actor" title="{{localize "STAGEMANAGER.EDITDIALOG.SELECTTOKEN"}}"><i class="fas fa-fw fa-bullseye"></i></button>
  </div>
</div>