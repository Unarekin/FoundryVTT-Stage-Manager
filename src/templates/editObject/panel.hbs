<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="panel">
  {{#with stageObject}}
    <div class="form-group">
      <label for="src">{{localize "STAGEMANAGER.EDITDIALOG.SRC"}}</label>
      <file-picker type="imagevideo" value="{{src}}" name="src" id="src"></file-picker>
    </div>
    
    <div class="form-group slim">
      <label>{{localize "STAGEMANAGER.EDITDIALOG.SIZE"}}</label>
      <div class="form-fields">
        <label for="bounds.width">{{localize "STAGEMANAGER.EDITDIALOG.WIDTH"}}</label>
        <input type="number" name="bounds.width" id="bounds.width" value="{{bounds.width}}" step="any">
        <label for="bounds.height">{{localize "STAGEMANAGER.EDITDIALOG.HEIGHT"}}</label>
        <input type="number" name="bounds.height" id="bounds.height" value="{{bounds.height}}" step="any">
      </div>
    </div>

    <div class="form-group">
      <canvas id="PanelPreview">
    </div>
    <div class="form-group">
      <label>{{localize "STAGEMANAGER.EDITDIALOG.BORDERS.TITLE"}}</label>
    </div>

    <div class="form-group slim">
      <label for="borders.left">{{localize "STAGEMANAGER.EDITDIALOG.BORDERS.LEFT"}}</label>
      <input type="number" min="0" step="1" name="borders.left" id="borders.left" value="{{borders.left}}">
      
      <label for="borders.right">{{localize "STAGEMANAGER.EDITDIALOG.BORDERS.RIGHT"}}</label>
      <input type="number" min="0" step="1" name="borders.right" id="borders.right" value="{{borders.right}}">
    </div>

    <div class="form-group">
      <label for="borders.top">{{localize "STAGEMANAGER.EDITDIALOG.BORDERS.TOP"}}</label>
      <input type="number" min="0" step="1" name="borders.top" id="borders.top" value="{{borders.top}}">
      <label for="borders.bottom">{{localize "STAGEMANAGER.EDITDIALOG.BORDERS.BOTTOM"}}</label>
      <input type="number" min="0" step="1" name="borders.bottom" id="borders.bottom" value="{{borders.bottom}}">
    </div>

    <div class="form-group">
      <label for="angle">
        {{localize "STAGEMANAGER.EDITDIALOG.ANGLE"}}
        <span class="units">{{localize "STAGEMANAGER.EDITDIALOG.ANGLEHINT"}}</span>
      </label>
      <range-picker value="{{angle}}" min="0" max="360" step="any" name="angle" id="angle"></range-picker>
    </div>

    <div class="form-group slim">
      <label>{{localize "STAGEMANAGER.EDITDIALOG.SKEW"}}</label>
      <div class="form-fields">
        <label for="skew.x">{{localize "STAGEMANAGER.EDITDIALOG.POSX"}}</label>
        <input type="number" name="skew.x" id="skew.x" value="{{skew.x}}" min="0" step="any">
        <label for="skew.y">{{localize "STAGEMANAGER.EDITDIALOG.POSY"}}</label>
        <input type="number" name="skew.y" id="skew.y" value="{{skew.y}}" min="0" step="any">
      </div>
    </div>

    <div class="form-group">
      <label for="alpha">{{localize "STAGEMANAGER.EDITDIALOG.ALPHA"}}</label>
      <range-picker value="{{alpha}}" min="0" max="1" step=".01" id="alpha" name="alpha"></range-picker>
    </div>
  {{/with}}
</section>

