<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="actor">
  {{#with stageObject}}
    {{> "modules/stage-manager/templates/actorSelector.hbs" id="actor" actors=../actors}}
    {{!-- <div class="form-group">
      <label for="actor">{{localize "STAGEMANAGER.EDITDIALOG.ACTOR"}}</label>
      <select name="actor" id="actor">
        {{selectOptions ../actorSelectContext selected=../actor}}
      </select>
    </div> --}}

        <div class="form-group">
      <label for="src">{{localize "STAGEMANAGER.EDITDIALOG.SRC"}}</label>
      <file-picker type="imagevideo" value="{{src}}" name="src" id="src"></file-picker>
    </div>
    
    <div class="form-group slim">
      <label>{{localize "STAGEMANAGER.EDITDIALOG.SIZE"}}</label>
      <div class="form-fields">
        <label for="bounds.width">{{localize "STAGEMANAGER.EDITDIALOG.WIDTH"}}</label>
        <input type="number" name="bounds.width" id="bounds.width" value="{{bounds.width}}" step="any">
        <label for="bounds.height">{{localize "STAGEMANAGER.EDITDIALOG.HEIGHT"}}</label>
        <input type="number" name="bounds.height" id="bounds.height" value="{{bounds.height}}" step="any">
      </div>
    </div>

    <div class="form-group slim">
      <label>{{localize "STAGEMANAGER.EDITDIALOG.ANCHOR"}}</label>
      <div class="form-fields">
        <label for="{{../formPrefix}}anchor.x">{{localize "STAGEMANAGER.EDITDIALOG.POSX"}}</label>
        <input type="number" name="{{../formPrefix}}anchor.x" id="{{../formPrefix}}anchor.x" value="{{anchor.x}}" step="any" min="0" max="1">
        <label for="{{../formPrefix}}anchor.y">{{localize "STAGEMANAGER.EDITDIALOG.POSY"}}</label>
        <input type="number" name="{{../formPrefix}}anchor.y" id="{{../formPrefix}}anchor.y" value="{{anchor.y}}" step="any" min="0" max="1">
      </div>
    </div>

    <div class="form-group">
      <label for="{{../formPrefix}}blendMode">{{localize "STAGEMANAGER.EDITDIALOG.BLENDMODE"}}</label>
      <select name="{{../formPrefix}}blendMode" id="{{../formPrefix}}blendMode">
        {{selectOptions ../blendModeSelect localize=true selected=blendMode}}
      </select>
    </div>

    <div class="form-group">
      <label for="{{../formPrefix}}tint">{{localize "STAGEMANAGER.EDITDIALOG.TINT"}}</label>
      <input type="text" name="{{../formPrefix}}tint" id="{{../formPrefix}}tint" value="{{tint}}" data-color-picker="{alphaChannel: false}">
    </div>

  {{/with}}
</section>