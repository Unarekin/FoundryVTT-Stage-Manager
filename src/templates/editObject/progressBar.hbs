<section class="tab {{cssClass}}" data-group="primary" data-tab="progressBar">
  <nav
    class="sheet-tabs tabs"
    aria-role="{{localize 'SHEETS.FormNavLabel'}}"
    data-group="progressBar"
  >
    {{#each subTabs as |tab|}}
      <a
        class="{{tab.cssClass}}"
        data-action="tab"
        data-group="{{tab.group}}"
        data-tab="{{tab.id}}"
      >
        <i class="{{tab.icon}}"></i>
        <label>{{localize tab.label}}</label>
      </a>
    {{/each}}
  </nav>
</section>